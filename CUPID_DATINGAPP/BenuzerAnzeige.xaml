<UserControl x:Class="CUPID_DATINGAPP.BenuzerAnzeige"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUPID_DATINGAPP"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Profilbild in der oberen linken Ecke -->
        <Ellipse Width="64" Height="64" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="726,10,0,0" Fill="White">
        </Ellipse>

        <!-- Username rechts von dem Profilbild -->
        <TextBlock HorizontalAlignment="Left" Margin="560,26,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Height="32" Width="144" FontSize="22" FontFamily="Arial" Foreground="#FFB8B8B8"/>
    </Grid>
</UserControl>
